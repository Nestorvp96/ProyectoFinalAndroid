<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntrenamientosDetalle"
    android:orientation="vertical"
    xmlns:fresco="http://schemas.android.com/tools"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/NombreEjercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:layout_marginLeft="@dimen/entrenamientodetalle_title_marginleft"
            />

        <ImageView
            android:id="@+id/btnfav"
            android:src="@drawable/staroff"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            />



    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/entrenamientodetalle_foto_heigth"
            fresco:placeholderImage="@drawable/my_drawable"
            />

        <ImageButton
            android:id="@+id/btnVideo"
            android:src="@drawable/youtube"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            />


    </RelativeLayout>


        <ScrollView
            android:layout_marginTop="@dimen/entrenamientodetalle_scroll_margin"
            android:layout_marginLeft="@dimen/entrenamientodetalle_scroll_margin"
            android:layout_marginRight="@dimen/entrenamientodetalle_scroll_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/DescripcionEjercicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    />


            </LinearLayout>




        </ScrollView>







</LinearLayout>